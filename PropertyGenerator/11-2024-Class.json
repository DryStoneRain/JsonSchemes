{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://example.com/notify-properties.schema.json",
  "title": "Definition of notification class",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string"
    },
    "className": {
      "type": "string"
    },
    "inheritINotifyPropertyChanged": {
      "type": "boolean"
    },
    "usings": {
      "type": "array",
      "items": {
        "description": "usings that will be placed in generated class",
        "type": "string"
      }
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "simpleCombinedProperties": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}
